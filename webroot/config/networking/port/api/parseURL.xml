<urlLists>
    <require>
        <define>parseURLReq</define>
        <path>process.mainModule.exports["corePath"] + '/src/serverroot/common/parseURLRequire'</path>
    </require>
    <require>
        <define>routesHandler</define>
        <path>process.mainModule.exports["corePath"] + '/src/serverroot/web/routes/handler'</path>
    </require>
    <require>
        <define>portsconfigapi</define>
        <path>./portsconfig.api</path>
    </require>
    <!-- API / Feature definition for Security Group configuration -->
    <!-- 1. List Security Group -
    -->
    <item>
        <url>/api/tenants/config/ports</url>
        <method>get</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.readPorts</callback>
    </item>
    <item>
        <url>/api/tenants/config/ports</url>
        <method>post</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.createPort</callback>
    </item>
    <item>
        <url>/api/tenants/config/ports/:uuid</url>
        <method>put</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.updatePorts</callback>
    </item>
    <item>
        <url>/api/tenants/config/ports/:uuid</url>
        <method>delete</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.deletePorts</callback>
    </item>
    <item>
        <url>/api/tenants/config/listVirtualMachines</url>
        <method>get</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.listVirtualMachines</callback>
    </item>
    <item>
        <url>/api/tenants/config/get-virtual-machines-ips</url>
        <method>get</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.getVMIAndInstIPDetails</callback>
    </item>
    <item>
        <url>/api/tenants/config/get-virtual-machine-details</url>
        <method>get</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.getVMIDetails</callback>
    </item>
    <item>
        <url>/api/tenants/config/delete-all-ports</url>
        <method>delete</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.deleteAllPorts</callback>
    </item>
    <item>
        <url>/api/tenants/config/get-virtual-machine-details-paged</url>
        <method>post</method>
        <feature>portconfig</feature>
        <callback>portsconfigapi.getVMIDetailsPaged</callback>
    </item>
</urlLists>

